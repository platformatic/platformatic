{
  "$schema": "https://platformatic.dev/schemas/v2.0.0/runtime",
  "entrypoint": "serviceApp",
  "watch": true,
  "autoload": {
    "path": "../monorepo",
    "exclude": ["docs", "composerApp"],
    "mappings": {
      "serviceAppWithLogger": {
        "id": "with-logger",
        "config": "platformatic.service.json"
      },
      "serviceAppWithMultiplePlugins": {
        "id": "multi-plugin-service",
        "config": "platformatic.service.json"
      },
      "dbApp": {
        "id": "db-app",
        "config": "platformatic.db.json"
      }
    }
  },
  "logger": {
    "level": "silent"
  },
  "restartOnError": 1000,
  "gracefulShutdown": {
    "runtime": 1000,
    "service": 1000
  },
  "health": {
    "enabled": true,
    "gracePeriod": 100,
    "interval": 500,
    "maxELU": 0.001,
    "maxHeapUsed": 0.001
  },
  "metrics": true
}
