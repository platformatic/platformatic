{
  "$schema": "https://schemas.platformatic.dev/@platformatic/runtime/2.6.0.json",
  "watch": false,
  "managementApi": true,
  "metrics": true,
  "restartOnError": 500,
  "autoload": {
    "path": ".",
    "exclude": ["application-2"]
  },
  "logger": {
    "level": "debug"
  },
  "verticalScaler": {
    "enabled": true,
    "maxWorkers": 2,
    "maxTotalWorkers": 10,
    "scaleUpELU": 0.1,
    "scaleDownELU": 0.2,
    "timeWindowSec": 1,
    "scaleIntervalSec": 3,
    "gracePeriod": 5000,
    "cooldownSec": 5
  }
}
