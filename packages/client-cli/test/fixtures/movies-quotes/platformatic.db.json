{
  "$schema": "https://schemas.platformatic.dev/@platformatic/db/1.52.0.json",
  "server": {
    "hostname": "127.0.0.1",
    "port": "0",
    "logger": {
      "level": "error"
    },
    "keepAliveTimeout": 1
  },
  "db": {
    "connectionString": "sqlite://./db.sqlite",
    "graphql": true,
    "openapi": true
  },
  "migrations": {
    "dir": "./migrations",
    "autoApply": true
  },
  "plugins": {
    "paths": ["./plugin.js"]
  },
  "watch": false,
  "runtime": {
    "logger": {
      "level": "fatal"
    }
  }
}
