{
  "openapi": "3.0.3",
  "info": {
    "title": "Carlo Martello",
    "description": "Espone un endpoint di Carlo Martello",
    "version": "1.0.0"
  },
  "paths": {
    "/martello": {
      "put": {
        "operationId": "putMartello",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "value": { "type": "number" },
                    "active": { "type": "boolean" }
                  }
                }
              }
            }
          },
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "boolean"
                }
              }
            }
          },
          "202": {
            "description": "Accepted"
          },
          "204": {
            "description": "Questo endpoint inserisce Carlo Martello come condottiero capostipite dei sovrani carolingi"
          }
        }
      }
    }
  }
}
