{
  "$schema": "https://schemas.platformatic.dev/@platformatic/db/2.0.0.json",
  "db": {
    "connectionString": "sqlite://./db.sqlite",
    "graphql": true,
    "openapi": true,
    "schemalock": true
  },
  "watch": false,
  "migrations": {
    "dir": "migrations",
    "autoApply": true
  },
  "plugins": {
    "paths": [
      {
        "path": "./plugins",
        "encapsulate": false
      },
      {
        "path": "./routes"
      }
    ],
    "typescript": true
  },
  "types": {
    "autogenerate": true
  }
}
