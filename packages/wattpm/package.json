{
  "name": "wattpm",
  "version": "3.0.0-alpha.3",
  "description": "The Node.js Application Server",
  "main": "index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platformatic/platformatic.git"
  },
  "author": "Platformatic Inc. <oss@platformatic.dev> (https://platformatic.dev)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/platformatic/platformatic/issues"
  },
  "homepage": "https://docs.platformatic.dev/docs/getting-started/quick-start-watt",
  "scripts": {
    "test": "npm run lint && borp --concurrency=1 --timeout=1200000",
    "coverage": "npm run lint && borp -X test -C --concurrency=1 --timeout=1200000",
    "gen-schema": "node lib/schema.js > schema.json",
    "gen-types": "json2ts > config.d.ts < schema.json",
    "build": "pnpm run gen-schema && pnpm run gen-types",
    "prepublishOnly": "pnpm run build",
    "lint": "eslint"
  },
  "bin": {
    "watt": "./bin/cli.js",
    "wattpm": "./bin/cli.js"
  },
  "files": [
    "bin",
    "index.js",
    "schema.json",
    "lib"
  ],
  "dependencies": {
    "@platformatic/control": "workspace:*",
    "@platformatic/runtime": "workspace:*",
    "@platformatic/foundation": "workspace:*",
    "colorette": "^2.0.20",
    "pino-pretty": "^13.0.0",
    "split2": "^4.2.0",
    "table": "^6.8.2"
  },
  "devDependencies": {
    "@platformatic/node": "workspace:*",
    "borp": "^0.20.0",
    "execa": "^9.4.0",
    "eslint": "9",
    "inspector-client": "^0.2.0",
    "json-schema-to-typescript": "^15.0.0",
    "neostandard": "^0.12.0",
    "typescript": "^5.5.4",
    "undici": "^7.0.0"
  },
  "engines": {
    "node": ">=22.18.0"
  }
}
