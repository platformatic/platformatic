{
  "name": "@platformatic/sql-mapper",
  "version": "2.0.1",
  "description": "A data mapper utility for SQL databases",
  "main": "mapper.js",
  "types": "mapper.d.ts",
  "scripts": {
    "lint": "eslint",
    "test": "npm run lint && npm run test:typescript && npm run test:postgresql && npm run test:mariadb && npm run test:mysql && npm run test:mysql8 && npm run test:sqlite",
    "test:runner": "borp --pattern 'test/**/*.test.{js, mjs}' --concurrency=1 --timeout=180000",
    "test:postgresql": "DB=postgresql npm run test:runner",
    "test:mariadb": "DB=mariadb npm run test:runner",
    "test:mysql": "DB=mysql npm run test:runner",
    "test:mysql8": "DB=mysql8 npm run test:runner",
    "test:sqlite": "DB=sqlite npm run test:runner",
    "test:typescript": "tsd"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platformatic/platformatic.git"
  },
  "author": "Matteo Collina <hello@matteocollina.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/platformatic/platformatic/issues"
  },
  "homepage": "https://github.com/platformatic/platformatic#readme",
  "devDependencies": {
    "@matteo.collina/tspl": "^0.1.1",
    "@opentelemetry/api": "^1.8.0",
    "borp": "^0.17.0",
    "eslint": "9",
    "fastify": "^5.0.0",
    "neostandard": "^0.11.1",
    "tsd": "^0.31.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@databases/mysql": "^6.0.0",
    "@databases/pg": "^5.5.0",
    "@databases/sql": "^3.3.0",
    "@fastify/error": "^4.0.0",
    "@hapi/topo": "^6.0.2",
    "@matteo.collina/sqlite-pool": "^0.4.0",
    "@platformatic/telemetry": "workspace:*",
    "@platformatic/utils": "workspace:*",
    "async-cache-dedupe": "^2.1.0",
    "camelcase": "^6.3.0",
    "fastify-plugin": "^5.0.0",
    "inflected": "^2.1.0"
  },
  "tsd": {
    "directory": "test/types"
  }
}
