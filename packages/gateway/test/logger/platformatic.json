{
  "$schema": "https://schemas.platformatic.dev/@platformatic/gateway/2.60.0.json",
  "server": {
    "logger": {
      "level": "debug",
      "transport": {
        "target": "pino/file",
        "options": {
          "destination": "{LOG_DIR}/application.log",
          "mkdir": true
        }
      },
      "formatters": {
        "path": "logger-formatters.js"
      },
      "timestamp": "isoTime",
      "redact": {
        "paths": ["secret"],
        "censor": "***HIDDEN***"
      }
    }
  },
  "gateway": {
    "services": []
  }
}
