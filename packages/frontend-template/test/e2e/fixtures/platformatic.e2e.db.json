{
  "$schema": "https://platformatic.dev/schemas/v0.22.0/db",
  "server": {
    "hostname": "127.0.0.1",
    "port": "9999",
    "logger": {
      "level": "info"
    },
    "cors": {
      "origin": {
        "regexp": "/*/"
      }
    }
  },
  "db": {
    "connectionString": "sqlite://./db.sqlite",
    "graphql": true,
    "openapi": true
  },
  "migrations": {
    "dir": "migrations"
  },

  "types": {
    "autogenerate": false
  }
}
