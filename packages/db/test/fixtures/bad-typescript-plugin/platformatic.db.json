{
  "server": {
    "logger": {
      "level": "info"
    },
    "hostname": "127.0.0.1",
    "port": "3042"
  },
  "core": {
    "connectionString": "sqlite://db.sqlite",
    "graphiql": true,
    "ignore": {
      "versions": true
    }
  },
  "migrations": {
    "dir": "migrations",
    "table": "versions",
    "autoApply": true
  },
  "types": {
    "autogenerate": true
  },
  "typescript": {
    "watch": true,
    "outDir": "dist"
  },
  "plugin": {
    "path": "plugin.ts"
  }
}