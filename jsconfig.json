{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "tmp",
    "dist",
    "node_modules/**",
    "tmp/**",
    "dist/**",
    "**/node_modules",
    "**/tmp",
    "**/dist"
  ]
}
